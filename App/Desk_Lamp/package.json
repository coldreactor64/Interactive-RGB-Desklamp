{
  "name": "Desk_Lamp",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint .",
    "debug": "react-native run-android",
    "release": "react-native run-android --variant release",
    "ios": "react-native run-ios --simulator=\"iPhone X\"",
    "apk": "cd android && ./gradlew assembleRelease",
    "aab": "cd android && ./gradlew bundleRelease"
  },
  "dependencies": {
    "@react-native-community/slider": "^2.0.0",
    "axios": "^0.19.0",
    "react": "16.9.0",
    "react-native": "0.61.1",
    "react-native-dns-lookup": "^1.0.0",
    "react-native-gesture-handler": "^1.4.1",
    "react-native-reanimated": "^1.2.0",
    "react-native-screens": "^1.0.0-alpha.23",
    "react-navigation": "^4.0.10",
    "react-navigation-stack": "^1.9.0",
    "react-redux": "^7.1.1",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "styled-components": "^4.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/runtime": "^7.6.2",
    "@react-native-community/eslint-config": "^0.0.5",
    "axios-mock-adapter": "^1.17.0",
    "babel-jest": "^24.9.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.0",
    "eslint": "^6.4.0",
    "jest": "^24.9.0",
    "jest-styled-components": "^6.3.3",
    "metro-react-native-babel-preset": "^0.56.0",
    "react-dom": "^16.10.1",
    "react-native-testing-library": "^1.11.1",
    "react-test-renderer": "16.9.0"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "<rootDir>/Jest/testSetup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/helpers/",
      "<rootDir>/node_modules/"
    ],
    "moduleNameMapper": {
      "styled-components": "<rootDir>/node_modules/styled-components/native/dist/styled-components.native.cjs.js"
    },
    "globals": {
      "window": {}
    }
  }
}
